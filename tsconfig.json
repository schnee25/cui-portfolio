{
  "compilerOptions": {
    "baseUrl": "src", // 追加。import文をsrcからの絶対パスで記述出来る
    "paths": {
      "src/*": ["*"]
    },
    "target": "es5",
    "module": "es2015",
    "types": ["node"],
    "lib": ["es2019", "dom"],
    "allowJs": true, // jsコンパイル用
    "checkJs": true, // js簡易型チェック
    "sourceMap": true,
    "inlineSources": true,
    "outDir": "./dist/",
    "noImplicitAny": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node"
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*"]
}
